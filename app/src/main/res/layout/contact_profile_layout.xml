<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/idContactProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Contact Profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:paddingTop="15px"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/idNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idContactProfile"
        android:layout_marginTop="5dp"
        android:text="Name:"
        android:gravity="left"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/idNameEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/idNameProfile"
        android:layout_alignStart="@+id/idNameProfile"
        android:paddingLeft="15dp"

        />

    <TextView
        android:id="@+id/idPhNumProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/idNameEditProfile"
        android:text="Phone Number:"
        android:gravity="left"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/idPhNumEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/idPhNumProfile"
        android:layout_below="@+id/idPhNumProfile"
        android:inputType="number"
        android:paddingTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/idPhNumProfile"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/idRelationship"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Relationship:"
        android:gravity="left"
        android:layout_below="@+id/idPhNumEditProfile"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"

        />

    <ListView
        android:id="@+id/idListViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idRelationship"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:choiceMode="multipleChoice"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />



</RelativeLayout>
